    <file path="admin/model/catalog/product.php">
        <operation error="log">
            <search><![CDATA[$sql = "SELECT COUNT(DISTINCT p.product_id) AS total FROM " . DB_PREFIX . "product p LEFT JOIN " . DB_PREFIX . "product_description pd ON (p.product_id = pd.product_id)";]]></search>
            <add position="after"><![CDATA[
		if (!empty($data['filter_category_id'])) {
			$sql .= " LEFT JOIN " . DB_PREFIX . "product_to_category p2c ON (p.product_id = p2c.product_id)";
		}
		]]></add>
        </operation>

        <operation error="log">
            <search><![CDATA[$sql = "SELECT * FROM " . DB_PREFIX . "product p LEFT JOIN " . DB_PREFIX . "product_description pd ON (p.product_id = pd.product_id) WHERE pd.language_id = '" . (int)$this->config->get('config_language_id') . "'";]]></search>
            <add position="replace"><![CDATA[
		$sql = "SELECT p.*,pd.* FROM " . DB_PREFIX . "product p LEFT JOIN " . DB_PREFIX . "product_description pd ON (p.product_id = pd.product_id)";
		$sql .= " LEFT JOIN " . DB_PREFIX . "product_to_category p2c ON (p.product_id = p2c.product_id)";
		$sql .= " WHERE pd.language_id = '" . (int)$this->config->get('config_language_id') . "'";
		]]></add>
        </operation>

        <operation error="log">
            <search><![CDATA[if (!empty($data['filter_name'])) {]]></search>
            <add position="before"><![CDATA[
		if (!empty($data['filter_category_id'])) {
			$sql .= " AND p2c.category_id = '" . (int)$data['filter_category_id'] . "%'";
		}
        ]]></add>
        </operation>

        <operation error="log" info="Sort each product categories by name">
            <search><![CDATA[$query = $this->db->query("SELECT * FROM " . DB_PREFIX . "product_to_category WHERE product_id = '" . (int)$product_id . "'");]]></search>
            <add position="replace"><![CDATA[
		$sql = "SELECT p2c.* FROM " . DB_PREFIX . "product_to_category AS p2c";
		$sql .= " JOIN " . DB_PREFIX . "category_description AS cd ON cd.category_id = p2c.category_id";
		// $sql .= " WHERE product_id = '" . (int)$product_id . "'";
		$sql .= " WHERE product_id = '" . (int)$product_id . "' AND cd.language_id = '" . (int)$this->config->get('config_language_id') . "'";
		$sql .= " ORDER BY cd.name";

		$query = $this->db->query($sql);
		]]></add>
        </operation>

        <operation error="log">
            <search><![CDATA[$sql .= " GROUP BY p.product_id";]]></search>
            <add position="before"><![CDATA[
		if (!empty($data['filter_category_id'])) {
			if (!empty($data['filter_sub_category'])) {
				$implode_data = array();
				$implode_data[] = "category_id = '" . (int)$data['filter_category_id'] . "'";

				$this->load->model('catalog/category');

				$categories = $this->model_catalog_category->getCategories($data['filter_category_id']);

				foreach ($categories as $category) {
					$implode_data[] = "p2c.category_id = '" . (int)$category['category_id'] . "%'";
				}

				$sql .= " AND (" . implode(' OR ', $implode_data) . ")";
			} else {
				$sql .= " AND p2c.category_id = '" . (int)$data['filter_category_id'] . "%'";
			}
		}
		]]></add>
        </operation>
    </file>

